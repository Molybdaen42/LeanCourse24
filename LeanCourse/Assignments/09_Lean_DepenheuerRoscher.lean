variable (Œ± : Type*) [ConditionallyCompleteLinearOrder Œ±]
  [TopologicalSpace Œ±] [OrderTopology Œ±] [DenselyOrdered Œ±] in
lemma mono_exercise_part1_copy {f : Œ± ‚Üí Œ±} (hf : Continuous f) (h2f : Injective f) {a b x : Œ±}
    (hab : a ‚â§ b) (h2ab : f a < f b) (hx : a ‚â§ x) : f a ‚â§ f x := by {
  -- h2f, hab, h2ab gives us that f is strictly monotone. But that's more than we need to show, so we won't prove it.
  have h1 : [[f a, f b]] ‚äÜ f '' [[a, b]] := intermediate_value_uIcc (Continuous.continuousOn hf)
  rw [uIcc_of_le hab, uIcc_of_le (le_of_lt h2ab)] at h1
  have h2 : [[f a, f x]] ‚äÜ f '' [[a, x]] := intermediate_value_uIcc (Continuous.continuousOn hf)
  rw [uIcc_of_le hx] at h2
  have ha_lt_b : a < b := by 
    have : f a ‚â† f b := ne_of_lt h2ab
    exact lt_of_le_of_ne hab fun a_1 => this (congrArg f a_1)

  by_contra hcontra
  rw [not_le] at hcontra
  -- suppose a ‚â§ x, a ‚â§ b s.t. f(x) < f(a) < f(b)
  -- Since f(a) ‚â† f(x), we know that a < x
  have ha_lt_x : a < x := by
    have : f a ‚â† f x := (ne_of_lt hcontra).symm
    exact lt_of_le_of_ne hx fun a_1 => this (congrArg f a_1)

  -- use the IVT on the interval [[x, b]]
  have hIVT : [[f x, f b]] ‚äÜ f '' [[x, b]] := intermediate_value_uIcc (Continuous.continuousOn hf)
  have : f a ‚àà [[f x, f b]] := by
    simp [mem_uIcc]; left; exact ‚ü®le_of_lt hcontra, le_of_lt h2ab‚ü©  
  -- It gives us some x' ‚àà [[x, b]] with f(x') = f(a)
  obtain ‚ü®x',hx', hfx'_eq_fa‚ü© := hIVT this
  
  -- This gives us a contradiction by injectivity of f:
  -- on the one hand, a ‚àà [[x, b]]...
  have : a = x' := h2f (h2f (congrArg f hfx'_eq_fa.symm))
  rw [‚Üê this] at hx'
  -- but on the other hand, a ‚àâ [[x, b]]
  have hc2 : a ‚àâ [[x, b]] := by exact not_mem_uIcc_of_lt ha_lt_x ha_lt_b
  contradiction
  }

